<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="DeskBand11.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:cpcontrols="using:Microsoft.CmdPal.UI.Controls"
    xmlns:helpers="using:Microsoft.CmdPal.UI.Helpers"
    xmlns:local="using:DeskBand11"
    Title="DeskBand11 Settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Border
            Grid.Row="0"
            Padding="24,16"
            Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    Style="{ThemeResource TitleTextBlockStyle}"
                    Text="DeskBand11 Settings" />
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{ThemeResource BodyTextBlockStyle}"
                    Text="Configure which taskbar items are visible and enabled" />
            </StackPanel>
        </Border>

        <!--  Settings Content  -->
        <ScrollViewer
            Grid.Row="1"
            Padding="24,16"
            VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="8">
                <TextBlock
                    Margin="0,0,0,16"
                    Style="{ThemeResource SubtitleTextBlockStyle}"
                    Text="Taskbar Items" />

                <ItemsControl x:Name="TaskbarItemsControl" ItemsSource="{x:Bind TaskbarItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local:TaskbarItemViewModel">
                            <controls:SettingsExpander
                                Margin="0,0,0,8"
                                Description="{x:Bind Subtitle, Mode=OneWay}"
                                Header="{x:Bind Title, Mode=OneWay}"
                                IsExpanded="False">

                                <controls:SettingsExpander.HeaderIcon>
                                    <cpcontrols:ContentIcon>
                                        <cpcontrols:ContentIcon.Content>
                                            <cpcontrols:IconBox
                                                Width="20"
                                                Height="20"
                                                AutomationProperties.AccessibilityView="Raw"
                                                SourceKey="{x:Bind Icon, Mode=OneWay}"
                                                SourceRequested="{x:Bind helpers:IconCacheProvider.SourceRequested}" />
                                        </cpcontrols:ContentIcon.Content>
                                    </cpcontrols:ContentIcon>
                                </controls:SettingsExpander.HeaderIcon>

                                <!--  Toggle Switch for Enable/Disable  -->
                                <ToggleSwitch
                                    MinWidth="0"
                                    IsOn="{x:Bind IsEnabled, Mode=TwoWay}"
                                    OffContent="Disabled"
                                    OnContent="Enabled" />

                                <!--  Expanded Content  -->
                                <controls:SettingsExpander.Items>
                                    <!--  Item Details  -->
                                    <controls:SettingsCard Header="Item ID">
                                        <TextBlock
                                            FontFamily="Cascadia Mono, Consolas"
                                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                            IsTextSelectionEnabled="True"
                                            Text="{x:Bind Id}" />
                                    </controls:SettingsCard>

                                    <!--  Visibility Status  -->
                                    <controls:SettingsCard Header="Currently Visible">
                                        <TextBlock>
                                            <Run Text="{x:Bind ShouldBeVisible, Mode=OneWay}" />
                                        </TextBlock>
                                    </controls:SettingsCard>

                                </controls:SettingsExpander.Items>
                            </controls:SettingsExpander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>

        <!--  Footer with Action Buttons  -->
        <Border
            Grid.Row="2"
            Padding="24,16"
            Background="{ThemeResource SystemControlBackgroundAltMediumBrush}"
            BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <StackPanel
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Spacing="12">
                <Button
                    x:Name="ApplyButton"
                    Click="ApplyButton_Click"
                    Content="Apply"
                    Style="{ThemeResource AccentButtonStyle}" />
                <Button
                    x:Name="CloseButton"
                    Click="CloseButton_Click"
                    Content="Close" />
            </StackPanel>
        </Border>
    </Grid>
</Window>